{% extends 'FrontendBundle:Main:layout.html.twig' %}
{%block body%}
  <!-- Start Content -->
    <div id="content">
      <div class="container">
        <div class="row">
          <div class="col-sm-3 page-sideabr">
            <aside>
              <div class="inner-box">
                <div class="user-panel-sidebar">
                  <div class="collapse-box">
                    <h5 class="collapset-title no-border">My Classified <a aria-expanded="true" class="pull-right" data-toggle="collapse" href="#myclassified"><i class="fa fa-angle-down"></i></a></h5>
                    <div aria-expanded="true" id="myclassified" class="panel-collapse collapse in">
                      <ul class="acc-list">
                        <li class="active">
                          <a href="account-home.html"><i class="fa fa-home"></i> votre profil</a>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <div class="collapse-box">
                    <h5 class="collapset-title">Mes annonces <a aria-expanded="true" class="pull-right" data-toggle="collapse" href="#myads"><i class="fa fa-angle-down"></i></a></h5>
                    <div aria-expanded="true" id="myads" class="panel-collapse collapse in">
                      <ul class="acc-list">
                        <li>
                          <a href="{{path('backend_mes_annonces')}}"><i class="fa fa-credit-card"></i> Mes annonces <span class="badge">{{row}}</span></a>
                        </li>
                        <li>
                          <a href="{{path('backend_favoris_annonces')}}"><i class="fa fa-heart-o"></i> favoris <span class="badge">{{rw}}</span></a>
                        </li>
                        <li>
                          <a href="{{path('backend_getsavegarde_annonces')}}"><i class="fa fa-star-o"></i> Recherches sauvegardées <span class="badge">{{rows}}</span></a>
                        </li>
                
                        
                      </ul>
                    </div>
                  </div>
                  <div class="collapse-box">
                    <h5 class="collapset-title">Désactiver votre compte <a aria-expanded="true" class="pull-right" data-toggle="collapse" href="#close"><i class="fa fa-angle-down"></i></a></h5>
                    <div aria-expanded="true" id="close" class="panel-collapse collapse in">
                      <ul class="acc-list">
                        <li>
                          <a href="{{path('backend_desactiver_compte')}}"><i class="fa fa-close"></i> Désactiver votre compte</a>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
              <div class="inner-box">
                <div class="widget-title">
                  <h4>Advertisement</h4>
                </div>
                <img src="{{asset('assets/img/img1.jpg')}}" alt="">
              </div>
            </aside>
          </div>
          <div class="col-sm-9 page-content">
            <div class="inner-box">
              <h2 class="title-2"><i class="fa fa-star-o"></i> les annonces sauvegardées</h2>
              <br>
              <div class="table-responsive">
                <table class="table table-striped table-bordered add-manage-table">
                  <tbody>
                  {%for line in resultat%}
                    <tr>
                      <td class="add-img-td">
                        <a href="ads-details.html">
                          <img class="img-responsive" src="assets/img/item/img-1.jpg" alt="img">
                        </a>
                      </td>
                      <td class="ads-details-td">
                        <h4><a href="{{path('backend_detail_annoncessauvegarder',{'id':line.id})}}">{{line.annonce.titre}}</a></h4>
                        <p> <strong> déposé le </strong>:
                        {{line.annonce.dateAnnonce}} </p>
                        <p> <strong>Visitors </strong>: {{line.annonce.nbrVue}}{%if line.annonce.ville !=null %} <strong>Ville :</strong>{{line.annonce.ville}} {%endif%}</p>
                        <a href="{{path('backend_deletesavegarde_annonces',{'id':line.id})}}"> <i style="font-size:24px;float:right;position:relative; top:-50px;color:blue" onclick="if(!confirm('Voulez-vous supprimer cet annonce')) return false" class="fa fa-star-o"></i></a>
                      </td>
                      <td class="price-td">
                        <strong>{%if line.annonce.ville ==null %} 0{%else%}{{line.annonce.prix}}{%endif%}<sup>dt</sup></strong>
                      </td>
                    </tr>
                    {%endfor%}
                    
                  </tbody>
                </table>
              </div>               
            </div>
          </div>
        </div>  
      </div>      
    </div>
    <!-- End Content -->

{%endblock%}