{% extends 'FrontendBundle:Main:layout.html.twig' %}
{%block body%}
<style>
input[type=file]{display:none}

</style>

<section id="content">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <div class="page-login-form box">
              <h3>
                Register
              </h3>
             <form role="form" class="login-form" class="fos_user_registration_register" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
                <div class="form-group">
                  <div class="input-icon">
                   <i class="icon fa fa-envelope"></i>
                    {{ form_widget(form.email,{'attr':{'placeholder':'Email','class':'form-control'}}) }}
                  </div>
                </div> 
                <div class="form-group">
                  <div class="input-icon">
                    
                     <i class="icon fa fa-user" ></i>
                     {{ form_widget(form.username,{'attr':{'placeholder':'Username','class':'form-control'}}) }}
                  </div>
                </div> 
                <div class="form-group" style="margin-bottom:50px">
                  <div class="input-icon">
                    <i class="icon fa fa-unlock-alt" style="padding-top:15px"></i>
                    {{ form_widget(form.plainPassword.first,{'attr':{'placeholder':'Password','class':'form-control'}}) }}
                  </div>
                </div>  
                <div class="form-group" style="margin-bottom:50px">
                  <div class="input-icon">
                    <i class="icon fa fa-unlock-alt" style="padding-top:15px"></i>
                    {{ form_widget(form.plainPassword.second,{'attr':{'placeholder':'Confirm Password','class':'form-control'}}) }}
                  </div>
                </div>  
                    <div class="form-group" style="margin-bottom:50px">
                  <div class="input-icon">
                    <i class="icon fa fa-unlock-alt" style="padding-top:15px"></i>
                    {{ form_widget(form.tel,{'attr':{'placeholder':'Tel','class':'form-control'}}) }}
                  </div>
                </div> 

                      <div class="form-group" style="margin-bottom:50px">
                  <div class="input-icon">
                    
                    {{ form_rest(form) }}
                    
                  </div>
                </div>  
              
               
                              
                
               <input type="submit" id="_submit" name="_submit" value="Inscription"  style="position:relative;top:50px" class="btn btn-common log-btn" />
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>


{%endblock%}